<Window x:Class="Micser.Core.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:p="clr-namespace:Micser.Core.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.ApplicationTitle}" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="RegionStyle" TargetType="ContentControl">
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" x:Name="MenuRegion" regions:RegionManager.RegionName="MenuRegion" Style="{StaticResource RegionStyle}" />
        <ContentControl Grid.Row="1" x:Name="MainRegion" regions:RegionManager.RegionName="MainRegion" Style="{StaticResource RegionStyle}" />
        <ContentControl Grid.Row="1" x:Name="StatusRegion" regions:RegionManager.RegionName="StatusRegion" Style="{StaticResource RegionStyle}" />
    </Grid>
</Window>
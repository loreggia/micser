<views:View x:Class="Micser.Core.Views.InputChannelView"
             x:Name="Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Micser.Core.Controls"
             xmlns:viewModels="clr-namespace:Micser.Core.ViewModels"
             xmlns:i8N="clr-namespace:Micser.Core.I8n"
             xmlns:views="clr-namespace:Micser.Core.Views"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:InputChannelViewModel}"
             Width="Auto"
             MaxWidth="200"
             Height="Auto"
             MaxHeight="400"
             Background="Transparent">
    <Grid>
        <Border Padding="5" CornerRadius="1" BorderThickness="1" BorderBrush="Silver">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Target="{Binding ElementName=TxtName}" Content="{x:Static i8N:Strings.Name}" />
                    <controls:EditableTextBlock x:Name="TxtName" Text="{Binding Name, Mode=TwoWay}" MinWidth="100" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Target="{Binding ElementName=CbxDevice}" Content="{x:Static i8N:Strings.Device}" />
                    <ComboBox x:Name="CbxDevice" MinWidth="100" ItemsSource="{Binding DeviceDescriptions}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDeviceDescription}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Button x:Name="BtnRemove" Content="X" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding RemoveCommand}" BorderThickness="0" Margin="1" />
    </Grid>
</views:View>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls1="clr-namespace:Micser.Infrastructure.Controls"
                    xmlns:infrastructure="clr-namespace:Micser.Infrastructure"
                    xmlns:themes1="clr-namespace:Micser.Infrastructure.Themes">

    <Style TargetType="infrastructure:View">
        <Setter Property="Background" Value="Azure" />
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type controls1:EditableTextBlock}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="{themes1:GenericThemeKey Title}" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="0,0,5,5" />
    </Style>
</ResourceDictionary>
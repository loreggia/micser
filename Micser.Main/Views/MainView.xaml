<i:View
    x:Class="Micser.Main.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:Micser.Main.ViewModels"
    xmlns:i="clr-namespace:Micser.Infrastructure;assembly=Micser.Infrastructure"
    xmlns:c="clr-namespace:Micser.Infrastructure.Controls;assembly=Micser.Infrastructure"
    xmlns:w="clr-namespace:Micser.Main.Views.Widgets"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance v:MainViewModel}"
    d:DesignWidth="300"
    d:DesignHeight="200"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
        </Grid>

        <!-- Widgets="{Binding Widgets}"-->
        <c:WidgetPanel Grid.Row="1" x:Name="WidgetPanel" WidgetFactory="{Binding WidgetFactory}" ItemsSource="{Binding Widgets}">
        </c:WidgetPanel>

        <Expander Grid.Row="2" Header="Widgets" IsExpanded="True">
            <c:WidgetToolbox ItemsSource="{Binding AvailableWidgets}" />
        </Expander>
    </Grid>
</i:View>
<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <BinDir>$(SolutionDir)..\bin\$(ConfigurationName)\</BinDir>
  </PropertyGroup>
  <Target Name="CleanBinDir" AfterTargets="Clean">
    <RemoveDir Directories="$(BinDir)" ContinueOnError="True" />
  </Target>
  <Target Name="CopyDllsToBinDir" BeforeTargets="BeforeBuild">
    <PropertyGroup>
      <AppDir>$(BinDir)App</AppDir>
      <DrvDir>$(BinDir)Driver</DrvDir>
    </PropertyGroup>
    <ItemGroup>
      <AppFiles Include="$(SolutionDir)Micser.App\bin\$(ConfigurationName)\net5.0\**\*.*" Exclude="$(SolutionDir)Micser.App\bin\$(ConfigurationName)\**\*.pdb" />
      <AppFiles Include="$(SolutionDir)Micser.Engine\bin\$(ConfigurationName)\net5.0\**\*.*" Exclude="$(SolutionDir)Micser.Engine\bin\$(ConfigurationName)\**\*.pdb" />
      <AppFiles Include="$(SolutionDir)Micser.DriverUtility\bin\$(ConfigurationName)\net5.0\**\*.*" Exclude="$(SolutionDir)Micser.DriverUtility\bin\$(ConfigurationName)\**\*.pdb" />
      <DriverFiles Include="$(SolutionDir)Micser.Vac.Package\bin\$(ConfigurationName)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(AppFiles)" DestinationFolder="$(AppDir)\%(RecursiveDir)" />
    <Copy SourceFiles="@(DriverFiles)" DestinationFolder="$(DrvDir)\%(RecursiveDir)" />
  </Target>
</Project>
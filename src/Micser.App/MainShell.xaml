<Window x:Class="Micser.App.MainShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:regions="http://prismlibrary.com/"
        xmlns:p="clr-namespace:Micser.App.Properties"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:ai="clr-namespace:Micser.App.Infrastructure;assembly=Micser.App.Infrastructure"
        xmlns:c="clr-namespace:Micser.Common;assembly=Micser.Common"
        mc:Ignorable="d"
        x:Name="Window"
        Title="{x:Static p:Resources.ApplicationTitle}" Height="600" Width="800"
        Icon="icon.ico">

    <Window.Resources>
        <Style x:Key="RegionStyle" TargetType="ContentControl">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="ai:CustomApplicationCommands.Close" Executed="CloseCommand_Executed" />
        <CommandBinding Command="ai:CustomApplicationCommands.Exit" Executed="ExitCommand_Executed" />
        <CommandBinding Command="ai:CustomApplicationCommands.Restore" Executed="RestoreCommand_Executed" />
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" x:Name="MenuRegion" regions:RegionManager.RegionName="{x:Static c:Globals+PrismRegions.Menu}" Style="{StaticResource RegionStyle}" />
        <ContentControl Grid.Row="1" x:Name="MainRegion" regions:RegionManager.RegionName="{x:Static c:Globals+PrismRegions.Main}" Style="{StaticResource RegionStyle}" />
        <ContentControl Grid.Row="2" x:Name="StatusRegion" regions:RegionManager.RegionName="{x:Static c:Globals+PrismRegions.Status}" Style="{StaticResource RegionStyle}" />

        <tb:TaskbarIcon Grid.Row="3" x:Name="TaskbarIcon" MenuActivation="RightClick" ToolTipText="{x:Static p:Resources.ApplicationTitle}" TrayMouseDoubleClick="OnTrayMouseDoubleClick" IconSource="icon.ico">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Restore" Click="TaskbarIconRestoreClick" />
                    <MenuItem Header="Exit" Click="TaskbarIconExitClick" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
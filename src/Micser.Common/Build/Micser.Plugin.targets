<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CopyPlugin" BeforeTargets="AfterBuild">
    <ItemGroup>
      <PluginFiles Include="$(ProjectDir)$(OutDir)**\*.*" />
    </ItemGroup>
    <Message Text="Copying plugin files" Importance="High" />
    <Copy SourceFiles="@(PluginFiles)" DestinationFolder="$(ProjectDir)..\Micser.App\bin\$(ConfigurationName)\%(RecursiveDir)" />
    <Copy SourceFiles="@(PluginFiles)" DestinationFolder="$(ProjectDir)..\Micser.Engine\bin\$(ConfigurationName)\%(RecursiveDir)" />
  </Target>
</Project>
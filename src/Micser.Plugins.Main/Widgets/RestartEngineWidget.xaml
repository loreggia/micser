<widgets:Widget x:Class="Micser.Plugins.Main.Widgets.RestartEngineWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:widgets="clr-namespace:Micser.App.Infrastructure.Widgets;assembly=Micser.App.Infrastructure"
             xmlns:local="clr-namespace:Micser.Plugins.Main.Widgets"
             xmlns:controls="clr-namespace:Micser.App.Infrastructure.Controls;assembly=Micser.App.Infrastructure"
             xmlns:p="clr-namespace:Micser.Plugins.Main.Properties"
             mc:Ignorable="d"
             d:DesignHeight="70"
             d:DesignWidth="150"
             MinWidth="150"
             MinHeight="70"
             d:DataContext="{d:DesignInstance local:RestartEngineViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Content="{x:Static p:Resources.RestartEngineDelay}" Target="{Binding ElementName=SldDelay}" />
        <controls:EditableSlider Grid.Column="1" x:Name="SldDelay" Minimum="0" Maximum="60" Value="{Binding Delay}" />
    </Grid>
</widgets:Widget>
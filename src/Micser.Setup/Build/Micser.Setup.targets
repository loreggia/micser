<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <BinDir>$(SolutionDir)..\bin\$(ConfigurationName)\</BinDir>
  </PropertyGroup>
  <Target Name="CleanBinDir" AfterTargets="Clean">
    <RemoveDir Directories="$(BinDir)" ContinueOnError="True" />
  </Target>
  <Target Name="CopyMsiToBinDir" AfterTargets="AfterBuild">
    <MakeDir Directories="$(BinDir)Installer" />
    <Copy SourceFiles="$(ProjectDir)Micser.msi" DestinationFolder="$(BinDir)Installer" />
  </Target>
  <Target Name="CopyDllsToBinDir" BeforeTargets="BeforeBuild">
    <PropertyGroup>
      <AppDir>$(BinDir)App</AppDir>
      <DrvDir>$(BinDir)Driver</DrvDir>
    </PropertyGroup>
    <ItemGroup>
      <AppFiles Include="$(SolutionDir)Micser.App\bin\$(ConfigurationName)\**\*.*" Exclude="$(SolutionDir)Micser.App\bin\$(ConfigurationName)\**\*.pdb" />
      <AppFiles Include="$(SolutionDir)Micser.Engine\bin\$(ConfigurationName)\**\*.*" Exclude="$(SolutionDir)Micser.Engine\bin\$(ConfigurationName)\**\*.pdb" />
    </ItemGroup>
    <ItemGroup>
      <DrvFiles Include="$(SolutionDir)Micser.Vac.Package\bin\$(ConfigurationName)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(AppFiles)" DestinationFolder="$(AppDir)\%(RecursiveDir)" />
    <Copy SourceFiles="@(DrvFiles)" DestinationFolder="$(DrvDir)\%(RecursiveDir)" />
  </Target>
</Project>